	{
		"_id": "vfs.fs.free",
		"name": "Free space",
		"_group": "Storage",
		"history": "30d",
		"units": "B"
	},
	{
		"_id": "vfs.fs.pused",
		"name": "Space utilization",
		"_group": "Storage",
		"history": "30d",
		"value_type": "FLOAT",
		"units": "%",
		"description": "Space utilization in % for __RESOURCE__",
		"triggers": [
			{
				"_id": "none",
				"_id": "storageCrit",
				"expression": "{TEMPLATE_NAME:METRIC.avg(5m)}>{$STORAGE_UTIL_CRIT}",
				"name": "Disk space is critically low",
				"priority": "AVERAGE",
				"_translations": {
					"RU": {
						"name": "Мало свободного места"
					}
				}
			},
			{
				"_id": "none",
				"_id": "storageWarn",
				"expression": "{TEMPLATE_NAME:METRIC.avg(5m)}>{$STORAGE_UTIL_WARN}",
				"name": "Disk space is low",
				"priority": "WARNING",
				"_depends_on": [
					"storageCrit"
				],
				"_translations": {
					"RU": {
						"name": "Мало свободного места"
					}
				}
			}
		]
	},
	{
		"_id": "vfs.fs.inode.pfree",
		"name": "Free inodes in %",
		"_group": "Storage",
		"valueType": "FLOAT",
		"units": "%",
		"triggers": [
			{
				"_id": "trigger.inode.pfree.crit",
				"expression": "{TEMPLATE_NAME:METRIC.last()}<{$INODE_PFREE_CRIT:\"__ALARM_OBJECT__\"}",
				"name": "Free inodes is critically low, below {$INODE_PFREE_CRIT:\"__ALARM_OBJECT__\"}%",
				"priority": "WARNING",
				"translations": {
					"RU": {
						"name": "Мало inodes на диске! (< {$INODE_PFREE_CRIT:\"__ALARM_OBJECT__\"}%)"
					}
				}
			},
			{
				"_id": "trigger.inode.pfree.warn",
				"expression": "{TEMPLATE_NAME:METRIC.last()}<{$INODE_PFREE_WARN:\"__ALARM_OBJECT__\"}",
				"name": "Free inodes is below {$INODE_PFREE_WARN:\"__ALARM_OBJECT__\"}%",
				"priority": 2,
				"dependsOn": [
					"trigger.inode.pfree.crit"
				],
				"translations": {
					"RU": {
						"name": "Мало inodes на диске! (< {$INODE_PFREE_WARN:\"__ALARM_OBJECT__\"}%)"
					}
				}
			}
		]
	},
