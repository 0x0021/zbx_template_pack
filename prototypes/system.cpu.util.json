	"id":"system.cpu.util",
	"name":"CPU utilization",
	"description":"CPU utilization in %",
	"valueType":"FLOAT",
	"group":"CPU",
	"units":"%",
	"delay":"3m",
	"history":"30d",
	"trends":"365d"	,
	"triggers":[
		{
			"prototype":"trigger.cpu.high"
		}
	],
	"graphs":[
		{
			"name":"CPU utilization",
			"yaxismin":0,
			"yaxismax":100,
			"graphItems":[
				{
					"drawtype":"GRADIENT_LINE",
					"name":"system.cpu.util"
				}
			]
			
		}
	]
	},
