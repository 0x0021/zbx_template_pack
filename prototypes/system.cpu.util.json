		"group": "CPU",
		"valueType": "FLOAT",
		"triggers": [
			{
				"id": "trigger.cpu.load.warn",
				"name": "Load average is too high",
				"expression":"{TEMPLATE_NAME:METRIC.avg(5m)}/{TEMPLATE_NAME:__system.cpu.num__.last()}>{$LOAD_AVG_CRIT}",
				"priority": 3
			}
		],
		"graphs": [
			{
				"name": "System load",
				"graphType": "NORMAL",
				"yaxismin": 0,
				"ymin_type": "FIXED",
